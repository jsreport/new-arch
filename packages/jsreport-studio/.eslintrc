{
  "extends": ["standard", "standard-jsx", "plugin:react-hooks/recommended"],
  "parser": "babel-eslint",
  "plugins": [
    "babel"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "arrow-parens": 0,
    "react/jsx-handler-names": [0],
    "react/jsx-fragments": [0],
    "no-import-assign": "off",
    "multiline-ternary": "off"
  },
  "globals" : {
    "Studio": "readonly",
    "FileReader": "readonly",
    "alert": "readonly",
    "atob": "readonly",
    "Blob": "readonly",
    "saveAs": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "beforeEach": "readonly",
    "__DEVELOPMENT__": "readonly"
  }
}
