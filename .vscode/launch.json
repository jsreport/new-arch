    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mocha",
            "type": "node",
            "program": "${workspaceFolder}/packages/jsreport-data/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/packages/jsreport-data/test/**/*.js",
                "--timeout=0"
            ],
            "request": "launch",
            "outFiles": [
                "${workspaceFolder}/packages/jsreport-data/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
            "autoAttachChildProcesses": true
        }
    ]
}